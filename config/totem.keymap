            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
           &kp Q  &kp W           &kp E        &kp R           &kp T       &kp Y        &kp U            &kp I                &kp O            &kp P
           &kp A  &mt LEFT_ALT S  &mt LCTRL D  &mt LEFT_GUI F  &kp G       &kp H        &mt RIGHT_GUI J  &mt RIGHT_CONTROL K  &mt RIGHT_ALT L  &kp ESC
&kp LSHFT  &kp Z  &kp X           &kp C        &kp V           &kp B       &kp N        &kp M            &kp COMMA            &kp DOT          &kp INSERT  &kp LSHFT
                                  &lt 5 ENTER  &mo 1           &kp BSPC    &lt 3 SPACE  &mo 2            &lt 4 TAB
